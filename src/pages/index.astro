---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { skills } from '../constants/text';
import { socialLinks, projects } from '../constants/text';
import SplineScene from '../components/SplineScene';
---

<Layout 
   title="Raymondreamer | Design Engineer & Creative Developer"
   description="Design Engineer with 15+ years of design experience, specializing in immersive web experiences, 3D visualization, data visualization, and high-performance applications. Creator of Rthmn and Reality Designers."
   image="/images/rd.png"
>
   <main class="bg-black min-h-screen">
      <!-- HOME -->
      <section class="min-h-screen flex flex-col items-center justify-center px-4">
    
         <div class="w-full h-[375px] lg:h-[500px] mb-6">
          <SplineScene client:load />
         </div>
         <h1 class="font-russo text-center text-3xl lg:text-6xl font-bold mb-12 bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">
            Raymondreamer
         </h1>
         <div class="flex w-full justify-center items-center flex-wrap gap-4">
            {
               socialLinks.map(({ name, url, icon: Icon }) => (
                  <a 
                     href={url} 
                     class="font-russo inline-flex items-center justify-center gap-2 text-gray-400 bg-black/40 py-2 px-4 tracking-wider rounded-lg hover:bg-white/5 hover:text-white hover:-translate-y-0.5 transition-all duration-300 ease-out backdrop-blur-sm"
                  >
                     <Icon className="w-4 h-4" />
                     <span class="uppercase text-sm">{name}</span>
                  </a>
               ))
            }
         </div>
      </section>

      <!-- ABOUT -->
      <section id="about" class="w-full flex justify-center py-24">
         <div class="w-full lg:w-3/4 xl:w-2/3 text-gray-200 leading-7">
            <!-- About Section -->
            <div class="space-y-8 backdrop-blur-lg bg-black/60 p-8 rounded-2xl relative overflow-hidden shadow-2xl">
               <!-- Grid Background -->
               <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:2rem_2rem]"></div>
               
               <div class="relative space-y-8">
                  <div class="space-y-1">
                     <p class="text-gray-400 uppercase tracking-[0.2em] text-xs font-public font-semibold">About</p>
                     <h2 class="font-russo text-4xl font-bold mb-12 bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">
                        Design Engineer crafting next-generation digital experiences
                     </h2>
                  </div>
                  
                  <div class="space-y-8 text-lg">
                     <p class="text-gray-300 leading-relaxed font-public">
                        With over 15 years as a designer, I've transitioned into design engineering, bringing a unique perspective that bridges visual design and technical implementation. I specialize in creating immersive digital experiences that push the boundaries of what's possible on the web.
                     </p>

                     <p class="text-gray-300 leading-relaxed font-public">
                        Currently, I'm building Rthmn, a cutting-edge data visualization technology for trading markets that transforms complex financial data into intuitive, geometric patterns. Alongside this, I've created Reality Designers, an online community and blog focused on consciousness exploration and personal development.
                     </p>

                     <div class="pt-8 border-t border-white/10 space-y-6">
                        <p class="text-gray-300 leading-relaxed font-public">
                           Currently accepting select projects focusing on immersive web experiences, 3D visualization, and high-performance applications.
                        </p>
                        
                       
                     </div>
                  </div>
               </div>
            </div>

            <!-- Skills Section -->
            <div class="mt-24">
             
               <div class="backdrop-blur-lg bg-black/60 p-6 rounded-2xl relative overflow-hidden shadow-2xl">
                  <!-- Grid Background -->
                  <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:2rem_2rem]"></div>
                  
                  <div class="relative space-y-12">
                    <div class="space-y-1 mb-12">
                      <p class="text-gray-400 uppercase tracking-[0.2em] text-xs font-public font-semibold">Technologies</p>
                      <h2 class="font-russo text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">
                         Technical Stack
                      </h2>
                    </div>
                
                    <div class="space-y-16">
                      {Object.entries(skills).map(([category, items], index) => (
                        <div class="space-y-6">
                          <div class="flex items-center gap-2">
                            <span class="text-white/20 font-mono text-xs font-medium">{(index + 1).toString().padStart(2, '0')}</span>
                            <h3 class="font-public text-white text-sm uppercase tracking-[0.15em] font-semibold">{category}</h3>
                          </div>
                
                          <div class="w-full flex flex-wrap gap-4">
                            {items.map(({ name, icon: Icon }) => (
                              <div class="group flex items-center gap-4 px-4 py-3 rounded-lg bg-black/40 hover:bg-white/5 backdrop-blur-sm transition-all duration-300">
                                <Icon className="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" />
                                <span class="font-public text-sm font-medium tracking-wide text-gray-300 group-hover:text-white transition-colors">
                                  {name}
                                </span>
                              </div>
                            ))}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div> 
            </div>

            <!-- Projects Section -->
            <div class="mt-24">
               <div class="text-center space-y-1 mb-16">
                  <p class="text-gray-400 uppercase tracking-[0.2em] text-xs font-public font-semibold">Portfolio</p>
                  <h2 class="font-russo text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-white to-gray-400">
                     Featured Work
                  </h2>
               </div>
               <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                  {projects.map(project => (
                     <div class="group backdrop-blur-lg bg-black/60 p-6 rounded-2xl shadow-2xl overflow-hidden relative">
                        <!-- Grid Background -->
                        <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:2rem_2rem]"></div>
                        
                        <div class="relative space-y-4">
                           <Image 
                              src={project.image} 
                              alt={project.alt} 
                              width={600} 
                              height={400}
                              class="rounded-lg w-full object-cover aspect-video"
                           />
                           <div class="space-y-2">
                              <h3 class="font-russo text-xl text-white">{project.title}</h3>
                              <p class="text-gray-300 text-sm font-public leading-relaxed">{project.description}</p>
                              <a 
                                 href={project.url}
                                 target="_blank" 
                                 rel="noopener noreferrer" 
                                 class="inline-flex items-center gap-2 text-white/60 hover:text-white group"
                              >
                                 <span class="font-public font-medium tracking-wide uppercase text-xs">View Project</span>
                                 <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                 </svg>
                              </a>
                           </div>
                        </div>
                     </div>
                  ))}
               </div>
            </div>
         </div>
      </section>
   </main>
</Layout>


